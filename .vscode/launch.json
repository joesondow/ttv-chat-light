{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NMon Server Debug",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "restart": true,
      "console": "integratedTerminal",
      "preLaunchTask": "Build Watch",
      "program": "${workspaceFolder}/dist/server/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "NPM Server Break",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug-brk"],
      "sourceMaps": true,
      "preLaunchTask": "Build Watch",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "NPM Server Debug",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug"],
      "preLaunchTask": "Build Watch",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "NPM Server Start",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "preLaunchTask": "Build",
      "port": 9229
    },
    {
      "name": "Client Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:1339/",
      "webRoot": "${workspaceFolder}/dist/client"
    }
  ],
  "compounds": [
    {
      "name": "NPM Server/Client Debug",
      "configurations": ["NPM Server Debug", "Client Debug"]
    }
  ]
}
